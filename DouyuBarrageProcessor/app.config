<?xml version="1.0"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net"/>
    <sectionGroup name="applicationSettings" type="System.Configuration.ApplicationSettingsGroup, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089">
      <section name="DouyuLiveAssistant.Properties.Douyu" type="System.Configuration.ClientSettingsSection, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" requirePermission="false"/>
      <section name="DouyuLiveAssistant.Douyu" type="System.Configuration.ClientSettingsSection, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" requirePermission="false"/>
    </sectionGroup>
    <sectionGroup name="userSettings" type="System.Configuration.UserSettingsGroup, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089">
      <section name="DouyuLiveAssistant.Properties.Settings" type="System.Configuration.ClientSettingsSection, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" allowExeDefinition="MachineToLocalUser" requirePermission="false"/>
    </sectionGroup>
  </configSections>


  <log4net>
    <root>
      <level value="DEBUG"></level>
      <appender-ref ref="app"></appender-ref>
      <appender-ref ref="console"></appender-ref>"
    </root>

    <logger name="Debug" additivity="false">
      <level value="DEBUG"></level>
      <appender-ref ref="debug"></appender-ref>
    </logger>

    <logger name="Error">
      <level value="DEBUG"></level>
      <appender-ref ref="error"></appender-ref>
    </logger>

    <logger name="Sql" additivity="false">
      <level value="INFO"></level>
      <appender-ref ref="sql"></appender-ref>
    </logger>

    <!--输出到文件: app.log-->
    <appender name="app" type="log4net.Appender.RollingFileAppender">
      <file value="logs/app.log" />
      <appendToFile value="true" />
      <rollingStyle value="Size" />
      <maxSizeRollBackups value="7" />
      <maximumFileSize value="100MB" />
      <staticLogFileName value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline" />
      </layout>
    </appender>

    <!--输出到文件: debug.log-->
    <appender name="debug" type="log4net.Appender.FileAppender">
      <file value="logs/debug.log" />
      <appendToFile value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline" />
      </layout>
    </appender>

    <!--输出到文件: error.log-->
    <appender name="error" type="log4net.Appender.FileAppender">
      <file value="logs/error.log" />
      <appendToFile value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline" />
      </layout>
    </appender>

    <!--输出到文件: sql.log-->
    <appender name="sql" type="log4net.Appender.FileAppender">
      <file value="logs/sql.log" />
      <appendToFile value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline" />
      </layout>
    </appender>

    <!--输出到控制台-->
    <appender name="console" type="log4net.Appender.ColoredConsoleAppender">
      <mapping>
        <level value="ERROR"/>
        <foreColor value="White"/>
        <backColor value="Red, HighIntensity"/>
      </mapping>
      <mapping>
        <level value="DEBUG"/>
        <backColor value="Green"/>
      </mapping>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline"/>
      </layout>
    </appender>
  </log4net>

  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.0"/>
  </startup>

  <applicationSettings>
    <DouyuLiveAssistant.Properties.Douyu>
      <setting name="MovieDir" serializeAs="String">
        <value/>
      </setting>
    </DouyuLiveAssistant.Properties.Douyu>
    <DouyuLiveAssistant.Douyu>
      <setting name="MovieDir" serializeAs="String">
        <value/>
      </setting>
    </DouyuLiveAssistant.Douyu>
  </applicationSettings>

  <userSettings>
    <DouyuLiveAssistant.Properties.Settings>
      <setting name="MovieDir" serializeAs="String">
        <value>D:\DouyuBarrageProcessor\movies\</value>
      </setting>
      <setting name="SavedRoom" serializeAs="String">
        <value>122402</value>
      </setting>
    </DouyuLiveAssistant.Properties.Settings>
  </userSettings>
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="EntityFramework" publicKeyToken="B77A5C561934E089" culture="neutral"/>
        <bindingRedirect oldVersion="0.0.0.0-6.0.0.0" newVersion="6.0.0.0"/>
      </dependentAssembly>
    </assemblyBinding>
  </runtime>
</configuration>
